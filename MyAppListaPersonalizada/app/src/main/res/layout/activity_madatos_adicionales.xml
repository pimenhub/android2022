<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MADatosAdicionales"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgUserDatosAdicionales"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:src="@drawable/ic_user"
        android:layout_margin="25sp"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/txtNombreDatoAdicional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dato"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/txtApellidoDatoAdicional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dato"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/txtEdadDatoAdicional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dato"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/txtEstadoDatoAdicional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dato"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Datos adicionales 1"
        android:layout_margin="15sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Datos adicionales 2"
        android:layout_margin="15sp"
        />
    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cancelar"
        />

</LinearLayout>