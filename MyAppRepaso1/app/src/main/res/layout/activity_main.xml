<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50sp">
    <ImageView
        android:id="@+id/imgPrincipal"
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:src="@drawable/ic_matematicas"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="130sp"
        android:text="Conociendo las Operaciones Aritmeticas"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnConoceSuma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:text="conoce la suma"
            />
        <Button
            android:id="@+id/btnConoceResta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:text="conoce la resta"
            />

    </LinearLayout>
    <Button
        android:id="@+id/btnConoceMulti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="conoce la multiplicacion"
        />
    <Button
        android:id="@+id/btnConoceDivision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="conoce la division"
        />

</LinearLayout>