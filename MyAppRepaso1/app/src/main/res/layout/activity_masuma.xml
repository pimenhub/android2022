<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MASuma"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historia de la Suma"
            android:layout_margin="15sp"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historia"
            android:layout_margin="10sp"
            android:textStyle="italic"
            android:textSize="20sp"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:nestedScrollingEnabled="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:textIsSelectable="true"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="@string/textoSuma"
                    />
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simbolo"
                android:layout_margin="10sp"
                android:textStyle="italic"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:src="@drawable/ic_suma"
                android:layout_margin="10sp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10sp"
            android:background="@color/purple_500"
            android:layout_margin="10sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercicio"
            android:layout_margin="10sp"
            android:textStyle="italic"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/edtN1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese un numero"
                    android:inputType="number"
                    android:layout_margin="10sp"/>
                <EditText
                    android:id="@+id/edtN2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese otro numero"
                    android:inputType="number"
                    android:layout_margin="10sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/btnSumar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"
                    android:text="Sumar"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

</LinearLayout>