<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MABuscarIdSW"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:gravity="center"
        android:text="Buscar Cliente por Codigo"
        android:textColor="#FFA000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFE0B2"
        android:layout_margin="10sp">
        <EditText
            android:id="@+id/edtCodigoClienteBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ingrese CODIGO del Cliente a Buscar"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_margin="15sp"
            />
        <ImageButton
            android:id="@+id/imbBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_buscar"
            android:backgroundTint="#FFE0B2"
            />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp"
        app:cardBackgroundColor="#FFE0B2"
        android:layout_margin="15sp"
        android:elevation="15sp"
        app:cardElevation="15sp"
        app:contentPadding="10sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtCodigoBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5sp"
                android:text="Codigo:"
                />
            <TextView
                android:id="@+id/txtNombreBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5sp"
                android:text="Nombre:"
                />
            <TextView
                android:id="@+id/txtApellidoBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5sp"
                android:text="Apellido:"
                />
            <TextView
                android:id="@+id/txtCorreoBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5sp"
                android:text="Correo:"
                />
            <TextView
                android:id="@+id/txtFechaNaBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5sp"
                android:text="Fecha de Nacimiento:"
                />
            <TextView
                android:id="@+id/txtLimiteBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5sp"
                android:text="Limite de Credito:"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>