<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MABuscarIdSQLite"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Bebida por ID"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/edtCodigoBuscar"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:hint="Ingrese CODIGO de bebida a buscar"
            android:layout_margin="15sp"
            android:inputType="number"
            />
        <ImageButton
            android:id="@+id/imgbBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:src="@drawable/ic_search"
            android:backgroundTint="@color/white"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="25sp"
        app:cardCornerRadius="35sp"
        app:contentPadding="15sp"
        app:cardElevation="15sp"
        android:layout_margin="15sp"
        app:cardBackgroundColor="#FFCDD2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtCodigoBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Codigo:"
                android:textSize="25sp"
                android:layout_margin="15sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txtNombreBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textSize="25sp"
                android:layout_margin="15sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txtSaborBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sabor:"
                android:textSize="25sp"
                android:layout_margin="15sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txtPresentacionBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presentacion:"
                android:textSize="25sp"
                android:layout_margin="15sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txtTipoBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo:"
                android:textSize="25sp"
                android:layout_margin="15sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txtPrecioBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio:"
                android:textSize="25sp"
                android:layout_margin="15sp"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>